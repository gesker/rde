{
  "name": "Rust Dev Container",
  "image": "mcr.microsoft.com/devcontainers/rust:latest",
  "features": {
    "ghcr.io/devcontainers/features/rust:latest": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Required for Lab week 1
        "GitHub.copilot",
        "rust-lang.rust-analyzer",
        // Try to deal with codespaces error related to this extension
        // See README.md for more details
        "vadimcn.vscode-lldb",
        // These extensions seem to be running by default in codespaces
        "GitHub.codespaces",
        "GitHub.vscode-pull-request-github",
        "vscode.debug-auto-launch",
        "vscode.emmet",
        "vscode.git-base",
        "vscode.git",
        "vscode.github-authentication",
        "vscode.github",
        "vscode.merge-conflict",
        // Playing with these extensions
        "fill-labs.dependi",
        "Gruntfuggly.todo-tree",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "usernamehw.errorlens"
      ]
    }
  },
  "runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],
  "postCreateCommand": "rustup update && cargo --version && rustc --version",
  "remoteUser": "vscode"
}
